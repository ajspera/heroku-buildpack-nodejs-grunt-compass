#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output
# set -x          # enable debugging

# Configure directories
build_dir=$1
cache_dir=$2
env_dir=$3

bp_dir=$(cd $(dirname $0); cd ..; pwd)

ls $build_dir

cd $build_dir

echo "install bower + grunt"
echo npm install -g bower grunt-cli
echo "bower install"
echo bower install
echo "grunt"
echo grunt